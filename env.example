# =============================================================================
# 図書館管理システム - 環境変数テンプレート
# =============================================================================
# このファイルをコピーして .env ファイルを作成し、実際の値を設定してください
# 例: cp env.example .env

# =============================================================================
# 基本設定
# =============================================================================
# Flask設定
FLASK_APP=app.py
FLASK_ENV=development  # development, testing, production
SECRET_KEY=your-super-secret-key-change-this-in-production

# =============================================================================
# データベース設定
# =============================================================================
# 開発環境
DEV_DATABASE_URL=mysql+pymysql://username:password@localhost/library_dev

# テスト環境
TEST_DATABASE_URL=mysql+pymysql://username:password@localhost/library_test

# 本番環境
DATABASE_URL=mysql+pymysql://username:password@localhost/library

# MySQL設定（docker-compose使用時）
MYSQL_ROOT_PASSWORD=your-secure-root-password
MYSQL_DATABASE=library_dev
MYSQL_USER=library_user
MYSQL_PASSWORD=your-secure-user-password

# =============================================================================
# メール設定
# =============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@lib-mng.xcap.co.jp

# =============================================================================
# Slack連携設定
# =============================================================================
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_ENABLED=false
ADMIN_SLACK_EMAIL=admin@lib-mng.xcap.co.jp

# =============================================================================
# Power Automate連携
# =============================================================================
POWER_AUTOMATE_WEBHOOK_URL=https://your-webhook-url

# =============================================================================
# 管理者設定
# =============================================================================
ADMIN_PASSWORD=your-secure-admin-password

# =============================================================================
# API設定
# =============================================================================
API_KEY=your-very-secret-api-key

# =============================================================================
# セキュリティ設定
# =============================================================================
# セッション有効期限（時間）
SESSION_LIFETIME_HOURS=2

# CSRF保護
WTF_CSRF_ENABLED=true
WTF_CSRF_TIME_LIMIT=3600

# パスワードポリシー
MIN_PASSWORD_LENGTH=8
REQUIRE_SPECIAL_CHARS=true
REQUIRE_NUMBERS=true
REQUIRE_UPPERCASE=true

# =============================================================================
# アップロード設定
# =============================================================================
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=uploads

# =============================================================================
# ログ設定
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/library.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# 本番環境専用設定
# =============================================================================
# 本番環境でのみ設定する項目
# DEBUG=false
# SERVER_NAME=lib-mng.xcap.co.jp
# PREFERRED_URL_SCHEME=https

# =============================================================================
# 監視・メトリクス設定
# =============================================================================
# ヘルスチェック用
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# バックアップ設定
# =============================================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # 毎日午前2時
BACKUP_RETENTION_DAYS=30 